<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/fab_shadow"/>
    <item android:top="@dimen/fab_small_elevation" android:left="@dimen/fab_small_elevation"
        android:bottom="@dimen/fab_small_elevation" android:right="@dimen/fab_small_elevation">
    <selector>
        <item android:state_pressed="true">
            <shape android:shape="oval">
                <solid android:color="@color/grey"/>
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="oval">
                <solid android:color="@color/grey"/>
            </shape>
        </item>
        <item>
            <shape android:shape="oval">
                <solid android:color="@android:color/white"/>
            </shape>
        </item>
    </selector></item>
</layer-list>