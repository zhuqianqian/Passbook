<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <layer-list >
            <item><shape>
                <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
                <solid android:color="@color/shadow_0" />
                <corners android:radius="2dp" /></shape></item>
            <item><shape>
                <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
                <solid android:color="@color/shadow_1" />
                <corners android:radius="2dp" /></shape></item>
            <item><shape>
                <padding android:left="1dp" android:right="1dp" android:bottom="1dp" />
                <solid android:color="@color/shadow_2" />
                <corners android:radius="2dp" /></shape></item>
            <item><shape>
                <padding android:bottom="1dp" />
                <solid android:color="@color/shadow_3" />
                <corners android:radius="2dp" /></shape></item>

            <item><shape android:shape="rectangle">
                <corners android:radius="@dimen/control_corner_material" />
                <solid android:color="@color/grey" />
                <padding android:left="@dimen/button_padding_horizontal_material"
                    android:top="@dimen/button_padding_vertical_material"
                    android:right="@dimen/button_padding_horizontal_material"
                    android:bottom="@dimen/button_padding_vertical_material" />
                </shape></item>
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/control_corner_material" />
            <solid android:color="@color/btn_disabled_light" />
            <padding android:left="@dimen/button_padding_horizontal_material"
                android:top="@dimen/button_padding_vertical_material"
                android:right="@dimen/button_padding_horizontal_material"
                android:bottom="@dimen/button_padding_vertical_material" />
        </shape>
    </item>

    <item>
        <layer-list >
            <item><shape>
                <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
                <solid android:color="@color/shadow_0" />
                <corners android:radius="2dp" /></shape></item>
            <item><shape>
                <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
                <solid android:color="@color/shadow_1" />
                <corners android:radius="2dp" /></shape></item>
            <item><shape>
                <padding android:left="1dp" android:right="1dp" android:bottom="1dp" />
                <solid android:color="@color/shadow_2" />
                <corners android:radius="2dp" /></shape></item>
            <item><shape>
                <padding android:bottom="1dp" />
                <solid android:color="@color/shadow_3" />
                <corners android:radius="2dp" /></shape></item>

            <item><shape android:shape="rectangle">
                <corners android:radius="@dimen/control_corner_material" />
                <solid android:color="@android:color/white" />
                <padding android:left="@dimen/button_padding_horizontal_material"
                    android:top="@dimen/button_padding_vertical_material"
                    android:right="@dimen/button_padding_horizontal_material"
                    android:bottom="@dimen/button_padding_vertical_material" />
            </shape></item>
        </layer-list>
    </item>
</selector>
